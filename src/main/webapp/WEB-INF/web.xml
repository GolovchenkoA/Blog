    </filter>

    <filter-mapping>
        <filter-name>securityFilter</filter-name>
        <url-pattern>/posts/*</url-pattern>
    </filter-mapping-->

    <filter>
        <filter-name>postsServlet</filter-name>
        <filter-class>com.company.controller.PostsServlet</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>postsServlet</filter-name>
        <url-pattern>/posts</url-pattern>
    </filter-mapping>

